@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

/*place global styles here */
html,
body {
	@apply h-full;
	@apply max-w-full;
	@apply overflow-x-hidden;
	@apply m-0;
	@apply p-0;
}

body {
	@apply relative;
	@apply overflow-y-hidden;
}

@font-face {
	font-family: 'Quicksand';
	src: url('/fonts/Quicksand.ttf');
	font-display: swap;
}
